<%- include('header.ejs') %>
<head>
    <title>OK?</title>
</head>
<body>
    <br>
    <ul>
        <form action='https://www.youtube.com/watch?v=' method='GET'>
            <fieldset class="nes-container with-title">
                <p class="title">Is this OK?</p>
                <ul class="nes-list is-circle">
                    <li class = 'element'>Character: <%= character %></li>
                    <li class = 'element'>Kart: <%= kart %></li>
                    <% if(from == 'versus'){ %>
                        <li class = 'element'>Track: <%= map %></li>
                    <% }  else {%>
                        <li class = 'element'>Map: <%= map %></li>
                    <% } %> 
                </ul>
            </fieldset>
            <br>
            <ul>
                <input type="hidden" name="v" value='<%= link %>'>
                <button class="nes-btn is-primary" type='submit'><span id="confirm" >GO!</span></button>
            </ul>
        </form>
    </ul>
</body>